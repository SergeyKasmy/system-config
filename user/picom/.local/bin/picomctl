#!/bin/bash

cmd=$(basename "$0")

case "$cmd" in
	*-start)
		what="start"
		;;
	*-stop)
		what="stop"
		;;
	'')
		echo "Usage: $cmd start || stop || restart"
		exit 1
		;;
	*)
		what="$*"
		;;
esac

case "$what" in
	stop)
		killall picom
		;;
	start)
		unset GALLIUM_HUD
		picom &>/dev/null & disown -h
		;;
	restart)
		killall picom
		picom &>/dev/null & disown -h
		;;
esac
