[alias]
	s = status
	sw = switch
	l = log --graph
	lg = log --oneline --graph
	lga = log --oneline --all --graph
	d = diff
	dc = diff --cached
	dcs = diff --cached --stat
	dt = difftool --tool=nvimdiff
	dtc = difftool --tool=nvimdiff --cached
	a = add
	aa = add -A
	c = commit
	r = restore
	exec = "!exec "
[commit]
	gpgsign = true
[core]
	autocrlf = input
	pager = bat -p
[init]
	defaultBranch = main
