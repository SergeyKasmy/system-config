[user]
	name = {{ .personal.name }}
	email = {{ .personal.email }}
{{- if ne .chezmoi.hostname "star" }}
	signingkey = 324F28DB1BD0D0EC

[commit]
	gpgsign = true
{{- end }}

[core]
	autocrlf = input
	pager = bat -p

[init]
	defaultBranch = main

[alias]
	s = status
	sw = switch
	l = log --graph
	lg = log --oneline --graph
	lga = log --oneline --all --graph
	d = diff
	dc = diff --cached
	dcs = diff --cached --stat
	dt = difftool --tool=nvimdiff
	dtc = difftool --tool=nvimdiff --cached
	a = add
	aa = add -A
	c = commit
	r = restore
	exec = "!exec "
