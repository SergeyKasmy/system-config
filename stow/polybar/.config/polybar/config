; vim: filetype=dosini

[colors]
normal-background = #9222
normal-background-highlighted = #444
normal-font = #dfdfdf
special-background = #ffb52a
special-font = #000
alert = #bd2c40
;foreground-alt = #555
;secondary = #e60053

[bar/main]
modules-left = i3
modules-center = cmus
modules-right = updates email xkeyboard cpu memory pulseaudio date
module-margin = 2
background = ${colors.normal-background}
foreground = ${colors.normal-font}
font-0 = sans:size=13;3
font-1 = nerd:size=13;3
height = 2.5%
tray-position = right
fixed-center = true
padding-right = 1
cursor-click = pointer
enable-ipc = true

[module/i3]
type = internal/i3

label-mode-background = ${colors.special-background}
label-mode-foreground = ${colors.special-font}
label-mode-padding = 2

; focused = Active workspace on focused monitor
label-focused-background = ${colors.normal-background-highlighted}
label-focused-padding-left = 2
label-focused-padding-right = 3

; unfocused = Inactive workspace on any monitor
label-unfocused-padding-left = 2
label-unfocused-padding-right = 3

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${colors.normal-background-highlighted}
label-visible-padding-left = 2
label-visible-padding-right = 3

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding-left = 2
label-urgent-padding-right = 3

[module/cmus]
type = custom/script

exec = ~/.config/polybar/scripts/cmus-status
exec-if = pgrep -x cmus
interval = 1

click-left = cmus-remote --pause
click-right = cmus-remote --next
click-middle = cmus-remote --prev
scroll-up = cmus-remote --volume +5%
scroll-down = cmus-remote --volume -5%

;label-font = 3
;format = <label>
;format-underline = ${colors.foreground-alt}
;label = %output%
label-maxlen = 80

[module/updates]
type = custom/ipc
hook-0 = cat /tmp/polybar/updates
click-left = polybar-module-updates
format-prefix = "ﮮ "

[module/email]
type = custom/ipc
hook-0 = cat /tmp/polybar/email
click-left = polybar-module-email
format-prefix = " "

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = scroll lock
format-prefix = " "

label-indicator-background = ${colors.special-background}
label-indicator-foreground = ${colors.special-font}
label-indicator-padding = 2

[module/cpu]
type = internal/cpu
format-prefix = " "

[module/memory]
type = internal/memory
format-prefix = " "

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
ramp-volume-0 =  
ramp-volume-1 = 
ramp-volume-2 = 墳
ramp-volume-3 = 

format-muted-prefix = " "

[module/date]
type = internal/date

label = "%{A1:gsimplecal &:} %date%, %time%%{A}"

date = "%A, %b %d"
time = "%H:%M"

interval = 10
