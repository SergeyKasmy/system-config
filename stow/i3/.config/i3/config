## Apps

# xkill
bindsym $alt+$win+F4 --release exec --no-startup-id xkill

# rofi
bindsym $win+d exec --no-startup-id rofi -show combi
bindsym $alt+Tab exec --no-startup-id rofi -show window

# terminal
bindsym $win+Return exec kitty

# screenshoting
bindsym Print exec spectacle --fullscreen
bindsym Control+Print exec spectacle --current
bindsym Shift+Print exec spectacle --region
bindsym Control+Shift+Print exec spectacle --activewindow

# feh - change the wallpaper
bindsym $win+F1 exec --no-startup-id feh --no-fehbg --randomize --bg-fill "/usr/local/share/wallpapers/wallpaper.jpg"
# autostart
exec_always --no-startup-id feh --no-fehbg --randomize --bg-fill "/usr/local/share/wallpapers/wallpaper.jpg"
exec --no-startup-id compton 
exec --no-startup-id polybar main 
exec --no-startup-id dunst

exec --no-startup-id setxkbmap -layout us,ru -option grp:alt_shift_toggle
exec --no-startup-id kbdd
exec --no-startup-id numlockx on

exec --no-startup-id kitty gotop
#exec --no-startup-id kitty cmus

exec --no-startup-id telegram-desktop
exec --no-startup-id keepassxc-autounlock
