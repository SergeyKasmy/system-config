## General i3 settings

# gaps
gaps inner 10
gaps outer 0
smart_gaps on

# titlebar font
font pango:sans 8

# disable titlebar when tiling
#for_window [class="^.*"] border pixel 0
default_border none
#default_floating_border none

set $bg-color 	         #31363b
set $inactive-bg-color   #31363b
set $text-color          #eff0f1
set $inactive-text-color #7f8c8d
set $urgent-bg-color     #f67400

# window colors
#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          #00ff00
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color #00ff00
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color #00ff00
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #00ff00

# fix urgent focus in Plasma
#force_display_urgency_hint 0 ms
#focus_on_window_activation urgenta

##-----------------------------------------------------------------------------------------------------------
## Keybinds 

# set keys
set $win Mod4
set $alt Mod1

# use Mouse+$alt to drag floating windows
floating_modifier $alt

# kill focused window
bindsym $alt+F4 kill

# move focus 
bindsym $win+Left focus left
bindsym $win+Down focus down
bindsym $win+Up focus up
bindsym $win+Right focus right

# move focused window
bindsym $win+Shift+Left move left
bindsym $win+Shift+Down move down
bindsym $win+Shift+Up move up
bindsym $win+Shift+Right move right

# split in horizontal orientation
bindsym $win+h split h

# split in vertical orientation
bindsym $win+v split v

# enter fullscreen mode for the focused container
bindsym $win+f fullscreen toggle
# fullscreen the container
bindsym $win+Shift+f focus parent; fullscreen; focus child

# change container layout (stacked, tabbed, toggle split)
bindsym $win+s layout stacking
bindsym $win+w layout tabbed
bindsym $win+e layout toggle split

# toggle tiling / floating
bindsym $win+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $win+space focus mode_toggle

# focus the parent container
bindsym $win+q focus parent

# focus the child container
bindsym $win+Shift+q focus child


# reload the configuration file
bindsym $win+Shift+c reload
# restart i3 inplace 
bindsym $win+Shift+r restart


##-----------------------------------------------------------------------------------------------------------
## Modes

# resize window (mouse can also be used)
mode "resize"
{
        # left to shrink the window’s width.
        # right to grow the window’s width.
        # up to shrink the window’s height.
        # down to grow the window’s height.
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $win+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $win+r mode "default"
}
bindsym $win+r mode "resize"

mode "app_launching" 
{
	bindsym s exec systemsettings5; mode "default"
	bindsym c exec vivaldi; mode "default"
	bindsym e exec "konsole -e ranger"; mode "default"
	bindsym h exec "konsole -e htop"; mode "default"
	bindsym Control+h exec ksysguard; mode "default"
	bindsym x exec "konsole -e bc"; mode "default"
	bindsym Control+x exec kcalc; mode "default"
	bindsym m exec "konsole -e cmus"; mode "default"
	bindsym t exec telegram-desktop; mode "default"
        
	# back to normal: Enter or Escape or $win+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $win+a mode "default"
}
bindsym $win+a mode "app_launching"

mode "link_opening" 
{
	bindsym i exec --no-startup-id "xdg-open https://inbox.google.com/"; mode "default" 
	bindsym p exec --no-startup-id "xdg-open https://photos.google.com/"; mode "default" 
	bindsym d exec --no-startup-id "xdg-open https://drive.google.com/"; mode "default" 
	bindsym a exec --no-startup-id "xdg-open https://anilist.co/home"; mode "default" 
	
	# back to normal: Enter or Escape or $win+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $win+l mode "default"
}
bindsym $win+Shift+a mode "link_opening"

##-----------------------------------------------------------------------------------------------------------
## Plasma fix

# kill Plasma Desktop
exec --no-startup-id wmctrl -c Plasma
for_window [title="Desktop — Plasma"] kill; floating enable

# fix Plasma fly-outs
for_window [class="plasmashell"] floating enable
for_window [class="Plasma"] floating enable
for_window [title="plasma-desktop"] floating enable
for_window [title="win7"] floating enable
for_window [class="krunner"] floating enable
for_window [class="Kmix"] floating enable
for_window [class="Klipper"] floating enable
for_window [class="Plasmoidviewer"] floating enable
for_window [class="yakuake"] floating enable

# fix notification appearing on the second monitor
assign [class="plasmashell" window_type="notification"] output primary

# fix notification focusing
no_focus [window_type="notification"] 
no_focus [class="plasmashell"] 


##-----------------------------------------------------------------------------------------------------------
## Workspaces

# workspace names
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $win+1 workspace $ws1
bindsym $win+2 workspace $ws2
bindsym $win+3 workspace $ws3
bindsym $win+4 workspace $ws4
bindsym $win+5 workspace $ws5
bindsym $win+6 workspace $ws6
bindsym $win+7 workspace $ws7
bindsym $win+8 workspace $ws8
bindsym $win+9 workspace $ws9
bindsym $win+0 workspace $ws10

# move focused container to workspace
bindsym $win+Shift+1 move container to workspace $ws1
bindsym $win+Shift+2 move container to workspace $ws2
bindsym $win+Shift+3 move container to workspace $ws3
bindsym $win+Shift+4 move container to workspace $ws4
bindsym $win+Shift+5 move container to workspace $ws5
bindsym $win+Shift+6 move container to workspace $ws6
bindsym $win+Shift+7 move container to workspace $ws7
bindsym $win+Shift+8 move container to workspace $ws8
bindsym $win+Shift+9 move container to workspace $ws9
bindsym $win+Shift+0 move container to workspace $ws10

# assign odd workspaces to the primary monitor
set $primary_monitor "DisplayPort-0" 
workspace $ws1 output $primary_monitor 
workspace $ws3 output $primary_monitor 
workspace $ws5 output $primary_monitor 
workspace $ws7 output $primary_monitor 
workspace $ws9 output $primary_monitor 

# assign even workspaces to the secondary monitor
set $secondary_monitor "HDMI-A-0" 
workspace $ws2 output $secondary_monitor 
workspace $ws4 output $secondary_monitor 
workspace $ws6 output $secondary_monitor 
workspace $ws8 output $secondary_monitor 
workspace $ws10 output $secondary_monitor 


##-----------------------------------------------------------------------------------------------------------
## Apps

# rofi
bindsym $win+d exec rofi -show combi
bindsym $alt+Tab exec rofi -show window

# terminal
bindsym $win+Return exec konsole

# task manager
bindsym Control+Shift+Escape "exec konsole -e htop"

# screenshoting
bindsym Print exec spectacle --fullscreen
bindsym Control+Print exec spectacle --current
bindsym Shift+Print exec spectacle --region
bindsym Control+Shift+Print exec spectacle --activewindow

# feh - change the wallpaper
bindsym $win+F1 exec --no-startup-id feh --no-fehbg --randomize --bg-fill "/usr/local/share/pixmaps/wallpaper.jpg"
# autostart
exec_always --no-startup-id feh --no-fehbg --randomize --bg-fill "/usr/local/share/pixmaps/wallpaper.jpg"
exec --no-startup-id compton 
