#!/bin/bash

case "$1" in
	shutdown)
		poweroff
		;;
	reboot)
		reboot
		;;
	logout)
		i3-msg exit
		;;
	suspend)
		systemctl suspend
		;;
	lock)
		i3lock -c 000015
		;;
	*)
		echo "syscontrol: missing or invalid argument"
		echo "Available commands: shutdown, reboot, logout, suspend, lock"
		exit 1
esac

exit 0
